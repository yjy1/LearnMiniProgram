 <view class="tab-control">
 <block 
   wx:for="{{titles}}"
   wx:key="{{index}}"
  >
<view class="tab-item {{currentIndex == index ? 'active' : '' }} "
bindtap="handleTabItemClick"
data-index="{{index}}"
data-itemTitle="{{item}}"
data-indexCustom="{{'可传递自定义参数'}}"
>
<text>{{item}} </text>
</view>
 </block>
 </view>