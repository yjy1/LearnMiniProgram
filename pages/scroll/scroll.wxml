 <!-- 1.水平滚动：scroll-x -->
 <scroll-view class="container1" scroll-x="{{true}}">
   <!-- 遍历10次 -->
   <view wx:for="{{10}}" class="item1"> 
     {{item}}
   </view>
 </scroll-view>
 <!-- 2.垂直滚动：scroll-y -->
 <scroll-view class="container2" scroll-y="{{true}}" >
   <!-- 遍历10次 -->
   <view wx:for="{{10}}" class="item2"> 
     {{item}}
   </view>
 </scroll-view>

 <!-- 3.其他补充 -->
 <scroll-view class="container2" 
 scroll-y="{{true}}" 
 bindscroll="handleScroll"
 >
   <!-- 遍历10次 -->
   <view wx:for="{{10}}" class="item2"> 
     {{item}}
   </view>
 </scroll-view>