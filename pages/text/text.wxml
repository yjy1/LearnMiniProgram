<!--pages/text/text.wxml-->
 <!-- 1.基本使用 -->
 <!-- text相当于行内元素 -->
 <text>Hello World\n</text>
 <text>你好，小程序\n</text>

 <!-- 2.selectable:true -->
 <!-- 默认情况下text中的文本是不能被选中的 -->
<text  selectable="true">Hello coderYcj\n</text>
<text  selectable >Hello coderYcj\n</text>

<!-- 3.space:决定文本空格的大小 -->
<text >Hello World\n</text>
<text space="emsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="nbsp">Hello World\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>